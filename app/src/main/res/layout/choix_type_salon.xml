<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Unify.AppBarOverlay">
    </com.google.android.material.appbar.AppBarLayout>


    <include
        android:id="@+id/include"
        layout="@layout/content_main"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="center"
        tools:ignore="NotSibling" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="77dp"
        android:layout_height="74dp"
        app:srcCompat="@drawable/logo_1"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="222dp"
       />

    <ImageButton
        android:id="@+id/creer"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:background="@drawable/bouton_creer"
        app:srcCompat="@drawable/bouton_creer"
        android:layout_gravity="center_horizontal"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="20dp"
        />

    <ImageButton
        android:id="@+id/rejoindre"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:background="@drawable/bouton_rejoindre"
        app:srcCompat="@drawable/bouton_rejoindre"
        android:layout_gravity="center_horizontal"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="222dp"

        />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/parametres"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="222dp"

        />

    <TextView
        android:id="@+id/b_creer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRÃ‰ER"
        app:layout_anchor="@+id/creer"
        app:layout_anchorGravity="center"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="222dp"
        />

    <TextView
        android:id="@+id/b_rejoindre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REJOINDRE"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_anchor="@+id/rejoindre"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="222dp"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>